.cells {
  background-color: #fff;
  border: 2rpx  solid #eee
}

.cells .item {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  border-bottom: 1rpx solid #eee;
  background-color: #fff
}

.cells .item image {
  flex: 1;
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx;
}

.cells .item .meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex: 2;
  padding: 10rpx 0;
  font-size: 30rpx;
   height: 160rpx;
}


.cells .item .meta .name {
  color: #234;
  font-size: 35rpx;
}

.cells .item .meta .active{
  color: rgb(247, 95, 25);
  font-size: 35rpx;
}






